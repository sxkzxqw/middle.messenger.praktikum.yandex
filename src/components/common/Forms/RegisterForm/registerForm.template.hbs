<form class="form form__login {{extraClass}}">
  <h1 class="title text-center register__title">Регистрация</h1>
  <div class="register__inputs">
    {{{ Input type='email' ref='email' validate=validate.email name='email' placeholder='IvanIvanov@gmail.com'
    label='Email'}}}
    {{{ Input type='text' ref='login' validate=validate.login name='login' placeholder='IvanIvanov' label='Логин'}}}
    {{{ Input type='text' ref='first_name' validate=validate.first_name name='first_name' placeholder='Иван'
    label='Имя'}}}
    {{{ Input type='text' ref='second_name' validate=validate.second_name name='second_name' placeholder='Иванов'
    label='Фамилия'}}}
    {{{ Input type='phone' ref='phone' validate=validate.phone name='phone' placeholder='+7 (999) 999-99-99'
    label='Телефон'}}}
    {{{ Input type='password' ref='password' validate=validate.password name='password' label='Пароль'}}}
    {{{ Input type='password' ref='password_again' validate=validate.password_again name='password_again' label='Пароль
    (еще раз)'}}}
  </div>
  <div class="register__buttons center column">
    {{{ Button type='submit' extraClass='register__button' text='Зарегестрироваться' onClick=onRegister }}}
    {{{ Link text='Войти' extraClass='link-center register__link' onClick=onLogin }}}
  </div>
</form>
