{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "max-len": [
      2,
      160
    ],
    "semi": "warn",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "prefer-const": "warn",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "@typescript-eslint/no-unused-vars": 2,
    "no-restricted-imports": "warn",
    "default-case": "off"
  }
}
